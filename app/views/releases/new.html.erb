<h1>New release</h1>

<% form_for(@release) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :release_date %><br />
    <%= f.date_select :release_date %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', releases_path %>