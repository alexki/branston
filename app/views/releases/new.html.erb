<h1>New release</h1>

<% form_for(@release) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :release_date %>
    <%= f.date_select :release_date %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => '80x10' %>
  </p>
  <p class="form-navigation">
    <%= link_to 'Back', releases_path, :class => "back" %>
    <%= f.submit 'Create' %>
  </p>
<% end %>

