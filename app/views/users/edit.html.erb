<h2>Edit user</h2>
<% @user.password = @user.password_confirmation = nil %>

<div id="actions">
	<ul>
		<li><%= link_to 'Back', users_path %></li>
	</ul>
</div>

<%= error_messages_for :user %>
<% form_for(@user) do |f| -%>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p class="form-navigation"><%= submit_tag 'Update user' %></p>
<% end -%>

