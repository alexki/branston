<%= link_to 'New story', new_story_path, :class => "add" %>

<% content_for :page_end do %>
<script type="text/javascript">
document.observe("dom:loaded", function() {
  <% @stories.each do |story| %>
  new Draggable('<%= element_id(story) %>');
  <% end %>
  new Accordion("current_stories", 2);
});
</script>
<% end %>

<div id="current-wrapper">
  <h2>Current Stories</h2>
  <div id="current_stories" class="accordion">
  <% @stories.each do |story| %>
    <% @story = story -%>
    <div id="<%= element_id(story) %>" class="story">
      <div class="accordion-toggle">
        <%= in_place_editor_field 'story', 'title' %>
      </div>
      <div class="accordion-content">
        <p>
          (<%= in_place_editor_field 'story', 'points' %>) Points
          &nbsp;&nbsp;&nbsp;
          <span><%= link_to "Delete &raquo;", story, :confirm => 'Are you sure?', :method => :delete %></span>
          <br/>
          <%= in_place_editor_field 'story', 'description' %>
        </p>
      </div>
    </div>
  <% end %>
  </div>
</div>

