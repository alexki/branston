<%= error_messages_for :object => @iteration,
  :header_tag => 'h3',
  :id => "errors",
  :class => "errors",
  :header_message => "Whoops!",
  :message => "We had some problems saving this iteration."
-%>

<p class="form-fields">
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p class="form-fields">
  <%= f.label :velocity %>
  <%= f.text_field :velocity %>
</p>
<p class="form-fields">
  <%= f.label :start_date %>
  <%= f.calendar_date_select :start_date %>
</p>
<p class="form-fields">
  <%= f.label :end_date %>
  <%= f.calendar_date_select :end_date %>
</p>
